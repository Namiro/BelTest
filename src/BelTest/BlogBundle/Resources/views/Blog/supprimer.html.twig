 
{% extends "BelTestBlogBundle::layout.html.twig" %}
 
{% block title %}
    Supprimer un article - {{ parent() }}
{% endblock %}
 
{% block body %}

    <h2>Supprimer un article</h2>

    <p>
        Voulez vous vraiment supprimer l'article n° {{ id }} ?
    </p>

    <p>
        <a href="{{ path('belTestblog_voir', {'id': id}) }}" class="btn">
            <i class="icon-chevron-left"></i>
            Retour à l'article
        </a>
        <a href="{{ path('belTestblog_voir', {'id': id}) }}" class="btn">
            Supprimer définitivement
        </a>
    </p>

{% endblock %}
    
