{% extends "BelTestBlogBundle::layout.html.twig" %}
 
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
 
{% block belTestblog_body %}
 
    <h2>Liste des articles</h2>
 
    <ul>
        {% for article in liste_articles %}

            {# On inclut la vue à chaque itération dans la boucle #}
            {% include "BelTestBlogBundle:Blog:article.html.twig" with {'accueil': true} %}
            <hr />
        {% else %}
            Pas (encore !) d'articles
        {% endfor %}
    </ul>
    
    {% if nombrePage > 0 %}
        <div class="pagination">
            <ul>
                {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
                {% for p in range(1, nombrePage) %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('belTestblog_accueil', {'page': p}) }}">{{ p }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
 
{% endblock %}